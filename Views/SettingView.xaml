<Window x:Class="SHEndevour.Views.SettingView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:SHEndevour.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="SettingView" Height="450" Width="500" Background="#3d3d3d">




    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="10">

            <RadioButton Content="Rooms" Tag="Rooms" 
                         x:Name="RoomBTNSide"
                         Click="SettingButton_Click"
                         Style="{StaticResource MaterialDesignFlatButton}"/>

        </StackPanel>


        <ContentControl x:Name="RoomConfigure" Grid.Column="1"/>

        
        
    </Grid>
</Window>
