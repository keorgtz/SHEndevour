<Window x:Class="SHEndevour.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SHEndevour"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#272C3D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Content="{TemplateBinding Content}"/>

                            <Border.Effect>
                                <DropShadowEffect Opacity="0.4" Color="Black" BlurRadius="5" ShadowDepth="2" Direction="320"/>
                            </Border.Effect>

                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Trigger para cuando el botón esté seleccionado (IsPressed) -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#272C3D"/>
                                <Setter Property="BorderBrush" Value="#2E2E2E"/>
                            </Trigger>
                            <!-- Trigger para cuando el botón esté en foco -->
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Background" Value="#373A47"/>
                                <Setter Property="BorderBrush" Value="#C6C6C6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Grid>
        <!-- Definimos dos columnas, la primera es el Sidebar, la segunda es el contenido -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Ancho del Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Resto de la página -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Background="#18191B"> <!-- #18191B -->
            <!-- Información del usuario -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Usuario: Endevour" Foreground="White" FontSize="16" Padding="10,10,10,10"/>
                <TextBlock Text="Role: Admin" Foreground="White" FontSize="14" Padding="10,0,10,10"/>

            </StackPanel>

            <!-- Botones de navegación -->
            <Button Content="Inicio" Tag="Inicio" Margin="10,5" Padding="10"
                    Click="NavigationButton_Click" Style="{StaticResource RoundedButtonStyle}" Width="180" Height="35"/>
            <Button Content="Usuarios" Tag="Usuarios" Margin="10,5" Padding="10"
                    Click="NavigationButton_Click" Style="{StaticResource RoundedButtonStyle}" Width="180" Height="35"/>
            <Button Content="Configuración" Tag="Configuración" Margin="10,5" Padding="10"
                    Click="NavigationButton_Click" Style="{StaticResource RoundedButtonStyle}" Width="180" Height="35"/>

            

        </StackPanel>

        <!-- Contenido Principal -->
        <ContentControl x:Name="MainContent" Grid.Column="1" Background="White"/>
    </Grid>
</Window>
